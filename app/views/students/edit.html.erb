<%= form_for @student do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, :size => 130 %>
    <%= f.label :profile %>
    <%= f.text_field :profile, :size => 130 %>
    <%= f.label :mentor %>
    <%= f.text_field :mentor, :size => 130 %> 
    <%= f.label :grade %>
    <%= f.text_field :grade, :size => 10 %>
    <%= f.submit "編集する" %>
  <% end %>